{
	"name": "backend",
	"version": "0.1.8",
	"description": "Backend web server for spectrum software.",
	"main": "dist/main.js",
	"author": "Josh Hess",
	"scripts": {
		"prebuild": "cd ../frontend && npm run build && cd ../backend && rm -r public && mkdir public && cp -r ../frontend/dist/* public",
		"build": "tsc",
		"start": "npm run build && node .",
		"test": "npx jest",
		"hotload": "npx nodemon --watch ../frontend/src --watch src --ext vue,ts --exec npm start",
		"update": "./scripts/update.sh"
	},
	"keywords": [
		"server"
	],
	"dependencies": {
		"axios": "^0.19.2",
		"babel-jest": "^24.9.0",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"mongodb": "^3.5.4",
		"socket.io": "^2.2.0",
		"uuid": "^7.0.3",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.1",
		"@types/jest": "^24.0.22",
		"@types/mongodb": "^3.3.16",
		"@types/node": "^12.11.7",
		"@types/socket.io": "^2.1.4",
		"@types/uuid": "^7.0.2",
		"eslint": "^6.3.0",
		"jest": "^24.9.0",
		"jshint": "^2.10.2",
		"nodemon": "^1.19.4",
		"pkg": "^4.4.4",
		"ts-jest": "^24.1.0",
		"tslint": "^5.20.0",
		"typescript": "^3.7.2"
	}
}
